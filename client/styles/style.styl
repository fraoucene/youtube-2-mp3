.top-viewed
  text-align: center
  a
    color: white;
    text-decoration: none;
    padding 0px 50px
    font-size: 15px
    font-family: "Amaranth", arial, sans-serif
    &:hover
      color: colorUniv
      
.contact
  padding: 5% 15%;
  max-width: 1100px;
  button
    background: colorUniv
    color: white
    float: right
  textarea
    height: 150px
    
.pager
  max-width: 30%;
  margin-left: 35%;

.top
  background: white
  padding: 16px 20%;
  p
    text-align: center
    padding: 0 20%
  h2
    padding-top: 0px
  span 
    &:before, &:after
      width:2.5%


