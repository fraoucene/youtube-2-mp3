.overlay-mask 
  position: fixed
  width: 100%
  height: 100%
  background: rgba(0,0,0, 0.6)
  z-index: 5001
  top:0
  left:0
  text-align: center 
  &.overlay-mask--hidden 
    visibility: hidden
  .overlay-loader 
    margin-left: auto
    margin-right: auto
    display: block
    position: relative
    top: 42%

.watch-view-count 
  max-height: 24px
  font-size: 16px
  color: #666
  white-space: nowrap
  margin: 2px 0px
  
.nav-bar
  position: fixed
  z-index: 200
  top: 0px
  width: 100%
  margin-bottom:40px;
  .active
    a
      background: colorUniv !important

.backToTop 
  position: fixed
  top: 46%
  right: 20px
  width: 67px
  height: 67px
  cursor: pointer
  background: url('../img/back-to-top.png') 0 0 no-repeat
  z-index: 4000

.search-engine
  background: url('../img/bgd-mea-home.jpg') center 0 no-repeat
  background-size: cover
  padding: 45px 0px
  color: #FFF

.borderTtl 
  white-space: nowrap
  text-align: center
  text-transform: uppercase
  font-size: 26px
  font-size: 2.6rem
  box-sizing: border-box
  padding-top: 45px
  margin-bottom: 30px
  line-height: 36px
  span 
    &:before, &:after
      content: '*';
      display: table-cell;
      width: 5%;
      background: url('../img/bgd-border-ttl.png') repeat-x left 66%;
      opacity: 3;
    
  strong
    color: colorUniv

  
.intro
  color: #FFF
  font-size: 22px !important
  font-size: 2.2rem !important
  text-align: center
  font-family: "Amaranth", arial, sans-serif   
  
.search-wrap
  width: 65%
  margin: auto
  padding: 50px
  button
    background: colorUniv
    color: white

.btn-search
  content: ""
  width: 55px
  height: 55px
  position: absolute
  right: 0
  top: 0
  background: url('../img/ico-search-alpha.png') 0 0 no-repeat
  
.footer
  background: #313131
  padding: 45px 0px
  p
    color: #9d9d9d
  .links
    padding:15px
